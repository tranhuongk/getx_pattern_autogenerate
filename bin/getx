#!/bin/bash

pwd=$(pwd)
BASEDIR=$(dirname "$0")
lib=${BASEDIR%\/bin}/lib
template=${BASEDIR%\/bin}/template
version="1.0.0"
no_pub=0

function usage() {
    echo "Usage: getx create <output directory>
-h, --help                     Print this usage information.
    --platforms                The platforms supported by this project. This
                               argument only works when the --template is set
                               to app or plugin. Platform folders (e.g.
                               android/) will be generated in the target
                               project. When adding platforms to a plugin
                               project, the pubspec.yaml will be updated with
                               the requested platform. Adding desktop
                               platforms requires the corresponding desktop
                               config setting to be enabled.
                               [ios (default), android (default), windows
                               (default), linux (default), macos (default),
                               web (default)]
    --[no-]pub                 Whether to run \"flutter pub get\" after the
                               project has been created.
                               (defaults to on)
    --[no-]offline             When \"flutter pub get\" is run by the create
                               command, this indicates whether to run it in
                               offline mode or not. In offline mode, it will
                               need to have all dependencies already available
                               in the pub cache to succeed.
    --[no-]with-driver-test    Also add a flutter_driver dependency and
                               generate a sample \"flutter drive\" test.
-t, --template=<type>          Specify the type of project to create.

          [app]                (default) Generate a Flutter application.
          [module]             Generate a project to add a Flutter module to
                               an existing Android or iOS application.
          [package]            Generate a shareable Flutter project containing
                               modular Dart code.
          [plugin]             Generate a shareable Flutter project containing
                               an API in Dart code with a platform-specific
                               implementation for Android, for iOS code, or
                               for both.

-s, --sample=<id>              Specifies the Flutter code sample to use as the
                               main.dart for an application. Implies
                               --template=app. The value should be the sample
                               ID of the desired sample from the API
                               documentation website
                               (http://docs.flutter.dev). An example can be
                               found at
                               https://master-api.flutter.dev/flutter/widgets/
                               SingleChildScrollView-class.html
    --list-samples=<path>      Specifies a JSON output file for a listing of
                               Flutter code samples that can be created with
                               --sample.
    --[no-]overwrite           When performing operations, overwrite existing
                               files.
    --description              The description to use for your new Flutter
                               project. This string ends up in the
                               pubspec.yaml file.
                               (defaults to \"A new Flutter project.\")
    --org                      The organization responsible for your new
                               Flutter project, in reverse domain name
                               notation. This string is used in Java package
                               names and as prefix in the iOS bundle
                               identifier.
                               (defaults to \"com.example\")
    --project-name             The project name for this new Flutter project.
                               This must be a valid dart package name.
-i, --ios-language             [objc, swift (default)]
-a, --android-language         [java, kotlin (default)]

Run \"getx install\" to install getx pattern in your project."
    exit 1
}

if [ "$1" == "install" ]; then
    FILE=$pwd/pubspec.yaml
    if [ -f "$FILE" ]; then
        # cp -fr "$lib" "$pwd"
        echo "Installing GetX Pattern..."
        rsync -a "$lib" "$pwd"
        sed -i -e "/\(get:\).*/d" pubspec.yaml
        sed -i -e "s/\(cupertino_icons:\)/\get: ^3.24.0\n  cupertino_icons:/" pubspec.yaml
        rm -rf pubspec.yaml-e
        echo "  lib/app/data/model/user.dart"
        echo "  lib/app/data/provider/home_provider.dart"
        echo "  lib/app/data/repository/home_repository.dart"
        echo "  lib/app/modules/home_module/home_binding.dart"
        echo "  lib/app/modules/home_module/home_controller.dart"
        echo "  lib/app/modules/home_module/home_page.dart"
        echo "  lib/app/modules/splash_module/splash_page.dart"
        echo "  lib/app/routes/app_pages.dart"
        echo "  lib/app/routes/app_routes.dart"
        echo "  lib/app/theme/app_theme.dart"
        echo "  lib/app/translations/en_US/en_us_translations.dart"
        echo "  lib/app/translations/vi_VN/vi_vn_translation.dart"
        echo "  lib/app/translations/app_translations.dart"
        echo "  lib/app/utils/strings.dart"
        echo "  lib/main.dart"

        flutter pub get

        echo -e "Wrote 15 files.\n\nAll done!"
    else
        echo "----------------------------------------------------------------

This directory is not a Flutter Project!
Please create a Flutter Project first and go to this directory!

----------------------------------------------------------------"
    fi
else
    if [ "$1" == "create" ]; then
        while [ "$2" != "" ]; do
            case $2 in
            # --platforms)
            #     shift
            #     platforms="$2"
            #     ;;
            # --no-pub)
            #     shift
            #     no_pub=1
            #     ;;
            # --[no-]offline )   shift
            #                         interactive="$1"
            #                         ;;
            # --[no-]with-driver-test )   shift
            #                         interactive="$1"
            #                         ;;
            # -t, --template=<type> )   shift
            #                         interactive="$1"
            #                         ;;
            # -s, --sample=<id> )   shift
            #                         interactive="$1"
            #                         ;;
            # --list-samples=<path> )   shift
            #                         interactive="$1"
            #                         ;;
            # --[no-]overwrite )   shift
            #                         interactive="$1"
            #                         ;;
            # --description )   shift
            #                         interactive="$1"
            #                         ;;
            # --org )   shift
            #                         interactive="$1"
            #                         ;;
            # --project-name )   shift
            #                         interactive="$1"
            #                         ;;
            # -i, --ios-language )   shift
            #                         interactive="$1"
            #                         ;;
            # -a, --android-language )   shift
            #                         interactive="$1"
            #                         ;;

            -h | --help)
                usage
                exit
                ;;
            *)
                usage
                exit 1
                ;;
            esac
            shift
        done
    else
        if [ "$1" == "upgrade" ] || [ "$1" == "update" ]; then
            git -C "${BASEDIR%\/bin}" pull
        else
            if [ "$1" == "add" ]; then
                if [ "$2" == "" ]; then
                    echo "getx add [The page name]"
                else
                    echo "Adding $2 form..."
                    classname="$(tr '[:lower:]' '[:upper:]' <<<${2:0:1})${2:1}"
                    routename=$(echo $2 | tr '[a-z]' '[A-Z]')

                    # Provider
                    cp "$template/app/data/provider/template_provider.dart" "$pwd/lib/app/data/provider/$2_provider.dart"
                    sed -i -e "s/\(TemplateProvider\)/\\${classname}Provider/" "$pwd/lib/app/data/provider/$2_provider.dart"
                    rm -rf "$pwd/lib/app/data/provider/$2_provider.dart-e"

                    # Repository
                    cp "$template/app/data/repository/template_repository.dart" "$pwd/lib/app/data/repository/$2_repository.dart"
                    sed -i -e "s/\(TemplateProvider\)/\\${classname}Provider/" "$pwd/lib/app/data/repository/$2_repository.dart"
                    sed -i -e "s/\(TemplateRepository\)/\\${classname}Repository/" "$pwd/lib/app/data/repository/$2_repository.dart"
                    sed -i -e "s/\(template_provider\)/\\$2_provider/" "$pwd/lib/app/data/repository/$2_repository.dart"
                    rm -rf "$pwd/lib/app/data/repository/$2_repository.dart-e"

                    mkdir -p "$pwd/lib/app/modules/$2_module"
                    mkdir -p "$pwd/lib/app/modules/$2_module/widgets"

                    # Binding
                    cp "$template/app/modules/template_module/template_binding.dart" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(TemplateBinding\)/\\${classname}Binding/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(TemplateController\)/\\${classname}Controller/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(TemplateRepository\)/\\${classname}Repository/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(TemplateProvider\)/\\${classname}Provider/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(template_provider\)/\\$2_provider/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(template_repository\)/\\$2_repository/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    sed -i -e "s/\(template_module\/template_controller\)/\\$2_module\/$2_controller/" "$pwd/lib/app/modules/$2_module/$2_binding.dart"
                    rm -rf "$pwd/lib/app/modules/$2_module/$2_binding.dart-e"

                    # Controller
                    cp "$template/app/modules/template_module/template_controller.dart" "$pwd/lib/app/modules/$2_module/$2_controller.dart"
                    sed -i -e "s/\(TemplateController\)/\\${classname}Controller/" "$pwd/lib/app/modules/$2_module/$2_controller.dart"
                    sed -i -e "s/\(TemplateRepository\)/\\${classname}Repository/" "$pwd/lib/app/modules/$2_module/$2_controller.dart"
                    sed -i -e "s/\(template_repository\)/\\$2_repository/" "$pwd/lib/app/modules/$2_module/$2_controller.dart"
                    rm -rf "$pwd/lib/app/modules/$2_module/$2_controller.dart-e"

                    # Page
                    cp "$template/app/modules/template_module/template_page.dart" "$pwd/lib/app/modules/$2_module/$2_page.dart"
                    sed -i -e "s/\(TemplateController\)/\\${classname}Controller/" "$pwd/lib/app/modules/$2_module/$2_page.dart"
                    sed -i -e "s/\(TemplatePage\)/\\${classname}Page/" "$pwd/lib/app/modules/$2_module/$2_page.dart"
                    sed -i -e "s/\(TemplateController\)/\\${classname}Controller/" "$pwd/lib/app/modules/$2_module/$2_page.dart"
                    sed -i -e "s/\(_templateController\)/\_$2Controller/" "$pwd/lib/app/modules/$2_module/$2_page.dart"
                    sed -i -e "s/\(template_module\/template_controller\)/\\$2_module\/$2_controller/" "$pwd/lib/app/modules/$2_module/$2_page.dart"
                    rm -rf "$pwd/lib/app/modules/$2_module/$2_page.dart-e"

                    # App Pages
                    sed -i -e "s/\(]\)/\\tGetPage(\n\t\t\tname: Routes.${routename},\n\t\t\tpage: () => ${classname}Page(),\n\t\t),\n\t]/" "$pwd/lib/app/routes/app_pages.dart"
                    sed -i -e "/\(import '..\/..\/app\/modules\/$2_module\/$2_page.dart';\).*/d" "$pwd/lib/app/routes/app_pages.dart"
                    sed -i -e "s/\(part '.\/app_routes.dart';\)/\\import '..\/..\/app\/modules\/$2_module\/$2_page.dart';\npart '.\/app_routes.dart';/" "$pwd/lib/app/routes/app_pages.dart"
                    rm -rf "$pwd/lib/app/routes/app_pages.dart-e"

                    # App Routes
                    sed -i -e "/\($routename\).*/d" "$pwd/lib/app/routes/app_routes.dart"
                    sed -i -e "s/\(}\)/\\  static const $routename = '\/$2'; \/\/ $classname Page\n}/" "$pwd/lib/app/routes/app_routes.dart"
                    rm -rf "$pwd/lib/app/routes/app_routes.dart-e"

                    echo -e "  lib/app/data/provider/$2_provider.dart"
                    echo "  lib/app/data/repository/$2_repository.dart"
                    echo "  lib/app/modules/$2_module/$2_binding.dart"
                    echo "  lib/app/modules/$2_module/$2_controller.dart"
                    echo "  lib/app/modules/$2_module/$2_page.dart"
                    echo -e "Wrote 5 files.\n\nAll done!"
                fi
            else
                while [ "$1" != "install" ] && [ "$1" != "create" ]; do
                    case $1 in
                    -v | --version | version)
                        echo "-----------------------------
GetX Pattern Version: v$version
-----------------------------"
                        exit
                        ;;
                    esac
                    shift
                done
            fi
        fi
    fi
fi
